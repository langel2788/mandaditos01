<p id="notice"><%= notice %></p>

<h1>Lista de Pedidos<small><%= current_user.cliente%></small></h1>

<table>
  <thead>
    <tr>
      <th>Costo</th>
      <th>Colonia</th>
      <th>Hora registro</th>
      <th>Hora entrega</th>
      <th>Status</th>
      <th>Detalles</th>
      <th>Cliente</th>
      <th>Repartidor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.costo %></td>
        <td><%= order.colonia %></td>
        <td><%= order.hora_registro %></td>
        <td><%= order.hora_entrega %></td>
        <td><%= order.status_actual %></td>
        <td><%= order.detalles %></td>
        <td><%= order.user.cliente %></td>
        <td><%= order.employee.nombre %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        <td><%= link_to 'Pedido Entregdo', cambiar_a_entregado_order_path(order,order.id), method: :patch, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

